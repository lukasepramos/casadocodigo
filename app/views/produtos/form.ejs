<html>
  <body>
    <div class='erros'>
      <%if(errosValidacao){%>
        <url>
          <% for(var i = 0; i<errosValidacao.length;i++){%>
            <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
          <%}%>
        </url>
      <%}%>
    </div>
    <form action="/produtos" method="post">
      <div>
        <label for="titulo">Titulo do Livro</label>
        <input type="text" id="titulo" name="titulo" value="<%=produto.titulo%>" placeholder="Coloque o título" />
      </div>
      <div>
        <label for="preco">Preco</label>
        <input type="text" id="preco" name="preco" value="<%=produto.preco%>" placeholder="150.30" />
      </div>
      <div>
        <label for="descricao">Descrição</label>
        <textarea cols="20" rows="10" id="descricao" name="descricao"  placeholder="Fale sobre o livro"><%=produto.descricao%></textarea>
      </div>
      <input type="submit" value="Gravar"/>
    </form>
  </body>
</html>
